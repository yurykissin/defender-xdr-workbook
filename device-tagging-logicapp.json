{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "logicAppName": {
      "type": "string",
      "defaultValue": "MDE-ActiveDevice-Tagger",
      "metadata": {
        "description": "Name of the Logic App"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for the Logic App"
      }
    },
    "tenantId": {
      "type": "string",
      "defaultValue": "[subscription().tenantId]",
      "metadata": {
        "description": "Azure AD Tenant ID"
      }
    },
    "clientId": {
      "type": "string",
      "metadata": {
        "description": "App Registration Client ID with Machine.ReadWrite.All permission"
      }
    },
    "clientSecret": {
      "type": "secureString",
      "metadata": {
        "description": "App Registration Client Secret"
      }
    },
    "reportEmail": {
      "type": "string",
      "metadata": {
        "description": "Email address to receive the device tagging report"
      }
    },
    "recurrenceInterval": {
      "type": "int",
      "defaultValue": 1,
      "metadata": {
        "description": "How often the Logic App runs"
      }
    },
    "recurrenceFrequency": {
      "type": "string",
      "defaultValue": "Week",
      "allowedValues": [
        "Month",
        "Week",
        "Day",
        "Hour"
      ],
      "metadata": {
        "description": "Frequency unit for recurrence"
      }
    },
    "activeThresholdDays": {
      "type": "int",
      "defaultValue": 7,
      "metadata": {
        "description": "Devices seen within this many days are considered active"
      }
    },
    "dryRun": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "When true (default), sends report only. Set to false to also apply tag changes."
      }
    }
  },
  "variables": {
    "tagName": "ActiveDevice",
    "o365ConnectionName": "[concat(parameters('logicAppName'), '-office365')]"
  },
  "resources": [
    {
      "type": "Microsoft.Web/connections",
      "apiVersion": "2016-06-01",
      "name": "[variables('o365ConnectionName')]",
      "location": "[parameters('location')]",
      "properties": {
        "api": {
          "id": "[subscriptionResourceId('Microsoft.Web/locations/managedApis', parameters('location'), 'office365')]"
        },
        "displayName": "Office 365 Outlook - MDE Tagger"
      }
    },
    {
      "type": "Microsoft.Logic/workflows",
      "apiVersion": "2019-05-01",
      "name": "[parameters('logicAppName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/connections', variables('o365ConnectionName'))]"
      ],
      "properties": {
        "state": "Enabled",
        "definition": {
          "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "$connections": {
              "type": "Object",
              "defaultValue": {}
            },
            "TenantID": {
              "type": "String"
            },
            "ClientID": {
              "type": "String"
            },
            "Secret": {
              "type": "SecureString"
            },
            "ActiveThresholdDays": {
              "type": "Int"
            },
            "TagName": {
              "type": "String"
            },
            "DryRun": {
              "type": "Bool"
            },
            "RecurrenceInterval": {
              "type": "Int"
            },
            "RecurrenceFrequency": {
              "type": "String"
            }
          },
          "triggers": {
            "Recurrence": {
              "type": "Recurrence",
              "recurrence": {
                "interval": "@parameters('RecurrenceInterval')",
                "frequency": "@parameters('RecurrenceFrequency')"
              }
            }
          },
          "actions": {
            "Query_Active_Devices": {
              "type": "Http",
              "inputs": {
                "uri": "https://api.security.microsoft.com/api/advancedhunting/run",
                "method": "POST",
                "headers": {
                  "Content-Type": "application/json"
                },
                "body": {
                  "Query": "DeviceInfo | where Timestamp > ago(@{parameters('ActiveThresholdDays')}d) | summarize arg_max(Timestamp, *) by DeviceId | where SensorHealthState == 'Active' | project DeviceId, DeviceName, OSPlatform, LastSeen = Timestamp"
                },
                "authentication": {
                  "type": "ActiveDirectoryOAuth",
                  "authority": "",
                  "tenant": "@{parameters('TenantID')}",
                  "audience": "https://api.security.microsoft.com",
                  "clientId": "@{parameters('ClientID')}",
                  "secret": "@{parameters('Secret')}"
                }
              },
              "runAfter": {}
            },
            "Query_Inactive_Devices": {
              "type": "Http",
              "inputs": {
                "uri": "https://api.security.microsoft.com/api/advancedhunting/run",
                "method": "POST",
                "headers": {
                  "Content-Type": "application/json"
                },
                "body": {
                  "Query": "DeviceInfo | where Timestamp > ago(90d) | summarize arg_max(Timestamp, *) by DeviceId | where Timestamp < ago(@{parameters('ActiveThresholdDays')}d) or SensorHealthState != 'Active' | project DeviceId, DeviceName, OSPlatform, SensorHealthState, LastSeen = Timestamp, DaysSinceLastSeen = datetime_diff('day', now(), Timestamp) | sort by DaysSinceLastSeen desc"
                },
                "authentication": {
                  "type": "ActiveDirectoryOAuth",
                  "authority": "",
                  "tenant": "@{parameters('TenantID')}",
                  "audience": "https://api.security.microsoft.com",
                  "clientId": "@{parameters('ClientID')}",
                  "secret": "@{parameters('Secret')}"
                }
              },
              "runAfter": {}
            },
            "Query_Currently_Tagged_Devices": {
              "type": "Http",
              "inputs": {
                "uri": "https://api.security.microsoft.com/api/advancedhunting/run",
                "method": "POST",
                "headers": {
                  "Content-Type": "application/json"
                },
                "body": {
                  "Query": "DeviceInfo | where Timestamp > ago(90d) | summarize arg_max(Timestamp, *) by DeviceId | where DeviceManualTags has '@{parameters('TagName')}' | project DeviceId, DeviceName, OSPlatform, LastSeen = Timestamp"
                },
                "authentication": {
                  "type": "ActiveDirectoryOAuth",
                  "authority": "",
                  "tenant": "@{parameters('TenantID')}",
                  "audience": "https://api.security.microsoft.com",
                  "clientId": "@{parameters('ClientID')}",
                  "secret": "@{parameters('Secret')}"
                }
              },
              "runAfter": {}
            },
            "Parse_Active_Devices": {
              "type": "ParseJson",
              "inputs": {
                "content": "@body('Query_Active_Devices')?['Results']",
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "DeviceId": { "type": "string" },
                      "DeviceName": { "type": "string" },
                      "OSPlatform": { "type": "string" },
                      "LastSeen": { "type": "string" }
                    }
                  }
                }
              },
              "runAfter": {
                "Query_Active_Devices": [ "Succeeded" ]
              }
            },
            "Parse_Inactive_Devices": {
              "type": "ParseJson",
              "inputs": {
                "content": "@body('Query_Inactive_Devices')?['Results']",
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "DeviceId": { "type": "string" },
                      "DeviceName": { "type": "string" },
                      "OSPlatform": { "type": "string" },
                      "SensorHealthState": { "type": "string" },
                      "LastSeen": { "type": "string" },
                      "DaysSinceLastSeen": { "type": "integer" }
                    }
                  }
                }
              },
              "runAfter": {
                "Query_Inactive_Devices": [ "Succeeded" ]
              }
            },
            "Parse_Tagged_Devices": {
              "type": "ParseJson",
              "inputs": {
                "content": "@body('Query_Currently_Tagged_Devices')?['Results']",
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "DeviceId": { "type": "string" },
                      "DeviceName": { "type": "string" },
                      "OSPlatform": { "type": "string" },
                      "LastSeen": { "type": "string" }
                    }
                  }
                }
              },
              "runAfter": {
                "Query_Currently_Tagged_Devices": [ "Succeeded" ]
              }
            },
            "Build_Active_Device_IDs": {
              "type": "Select",
              "inputs": {
                "from": "@body('Parse_Active_Devices')",
                "select": "@item()?['DeviceId']"
              },
              "runAfter": {
                "Parse_Active_Devices": [ "Succeeded" ]
              }
            },
            "Build_Tagged_Device_IDs": {
              "type": "Select",
              "inputs": {
                "from": "@body('Parse_Tagged_Devices')",
                "select": "@item()?['DeviceId']"
              },
              "runAfter": {
                "Parse_Tagged_Devices": [ "Succeeded" ]
              }
            },
            "Create_Active_HTML_Table": {
              "type": "Table",
              "inputs": {
                "from": "@body('Parse_Active_Devices')",
                "format": "HTML",
                "columns": [
                  { "header": "Device Name", "value": "@item()?['DeviceName']" },
                  { "header": "OS", "value": "@item()?['OSPlatform']" },
                  { "header": "Last Seen", "value": "@item()?['LastSeen']" },
                  { "header": "Device ID", "value": "@item()?['DeviceId']" }
                ]
              },
              "runAfter": {
                "Parse_Active_Devices": [ "Succeeded" ]
              }
            },
            "Create_Inactive_HTML_Table": {
              "type": "Table",
              "inputs": {
                "from": "@body('Parse_Inactive_Devices')",
                "format": "HTML",
                "columns": [
                  { "header": "Device Name", "value": "@item()?['DeviceName']" },
                  { "header": "OS", "value": "@item()?['OSPlatform']" },
                  { "header": "Sensor Health", "value": "@item()?['SensorHealthState']" },
                  { "header": "Last Seen", "value": "@item()?['LastSeen']" },
                  { "header": "Days Inactive", "value": "@item()?['DaysSinceLastSeen']" },
                  { "header": "Device ID", "value": "@item()?['DeviceId']" }
                ]
              },
              "runAfter": {
                "Parse_Inactive_Devices": [ "Succeeded" ]
              }
            },
            "Create_Active_CSV": {
              "type": "Table",
              "inputs": {
                "from": "@body('Parse_Active_Devices')",
                "format": "CSV",
                "columns": [
                  { "header": "DeviceName", "value": "@item()?['DeviceName']" },
                  { "header": "OSPlatform", "value": "@item()?['OSPlatform']" },
                  { "header": "LastSeen", "value": "@item()?['LastSeen']" },
                  { "header": "DeviceId", "value": "@item()?['DeviceId']" }
                ]
              },
              "runAfter": {
                "Parse_Active_Devices": [ "Succeeded" ]
              }
            },
            "Create_Inactive_CSV": {
              "type": "Table",
              "inputs": {
                "from": "@body('Parse_Inactive_Devices')",
                "format": "CSV",
                "columns": [
                  { "header": "DeviceName", "value": "@item()?['DeviceName']" },
                  { "header": "OSPlatform", "value": "@item()?['OSPlatform']" },
                  { "header": "SensorHealthState", "value": "@item()?['SensorHealthState']" },
                  { "header": "LastSeen", "value": "@item()?['LastSeen']" },
                  { "header": "DaysSinceLastSeen", "value": "@item()?['DaysSinceLastSeen']" },
                  { "header": "DeviceId", "value": "@item()?['DeviceId']" }
                ]
              },
              "runAfter": {
                "Parse_Inactive_Devices": [ "Succeeded" ]
              }
            },
            "Build_Report": {
              "type": "Compose",
              "inputs": "<html><head><style>body{font-family:Segoe UI,sans-serif;margin:20px}table{border-collapse:collapse;width:100%;margin:10px 0}th,td{border:1px solid #ddd;padding:8px;text-align:left}th{background-color:#0078d4;color:white}tr:nth-child(even){background-color:#f2f2f2}.summary{background:#f0f8ff;padding:15px;border-radius:8px;margin:10px 0}.badge{display:inline-block;padding:4px 12px;border-radius:12px;color:white;font-weight:bold}.green{background:#107c10}.red{background:#d13438}.blue{background:#0078d4}.orange{background:#ff8c00}</style></head><body><h1>üõ°Ô∏è MDE Device Tagging Report</h1><div class='summary'><p><strong>Mode:</strong> @{if(parameters('DryRun'), '<span class=\"badge orange\">üîç DRY RUN ‚Äî report only, no changes</span>', '<span class=\"badge green\">‚úÖ LIVE ‚Äî tags applied</span>')}</p><p><strong>Tag name:</strong> <span class='badge blue'>@{parameters('TagName')}</span></p><p><strong>Active threshold:</strong> @{parameters('ActiveThresholdDays')} days</p><p><strong>Active devices:</strong> <span class='badge green'>@{length(body('Parse_Active_Devices'))}</span></p><p><strong>Inactive devices:</strong> <span class='badge red'>@{length(body('Parse_Inactive_Devices'))}</span></p><p><strong>Currently tagged:</strong> <span class='badge blue'>@{length(body('Parse_Tagged_Devices'))}</span></p></div><h2>üî¥ Inactive / Unhealthy Devices (@{length(body('Parse_Inactive_Devices'))})</h2><p>Devices not seen in the last @{parameters('ActiveThresholdDays')} days or with non-Active sensor health.</p>@{body('Create_Inactive_HTML_Table')}<hr/><h2>‚úÖ Active Devices (@{length(body('Parse_Active_Devices'))})</h2>@{body('Create_Active_HTML_Table')}<hr/><p><em>CSV files are attached to this email for further analysis.</em></p></body></html>",
              "runAfter": {
                "Create_Active_HTML_Table": [ "Succeeded" ],
                "Create_Inactive_HTML_Table": [ "Succeeded" ],
                "Parse_Tagged_Devices": [ "Succeeded" ]
              }
            },
            "Send_Report_Email": {
              "type": "ApiConnection",
              "inputs": {
                "host": {
                  "connection": {
                    "name": "@parameters('$connections')['office365']['connectionId']"
                  }
                },
                "method": "post",
                "body": {
                  "To": "[parameters('reportEmail')]",
                  "Subject": "MDE Device Report ‚Äî @{length(body('Parse_Active_Devices'))} active, @{length(body('Parse_Inactive_Devices'))} inactive @{if(parameters('DryRun'), '[DRY RUN]', '[LIVE]')}",
                  "Body": "<p>@{outputs('Build_Report')}</p>",
                  "Importance": "Normal",
                  "IsHtml": true,
                  "Attachments": [
                    {
                      "Name": "active-devices.csv",
                      "ContentBytes": "@{base64(body('Create_Active_CSV'))}",
                      "ContentType": "text/csv"
                    },
                    {
                      "Name": "inactive-devices.csv",
                      "ContentBytes": "@{base64(body('Create_Inactive_CSV'))}",
                      "ContentType": "text/csv"
                    }
                  ]
                },
                "path": "/v2/Mail"
              },
              "runAfter": {
                "Build_Report": [ "Succeeded" ],
                "Create_Active_CSV": [ "Succeeded" ],
                "Create_Inactive_CSV": [ "Succeeded" ]
              }
            },
            "Apply_Tags_If_Live": {
              "type": "If",
              "expression": {
                "and": [
                  {
                    "equals": [
                      "@parameters('DryRun')",
                      false
                    ]
                  }
                ]
              },
              "actions": {
                "Tag_Active_Untagged_Devices": {
                  "type": "Foreach",
                  "foreach": "@body('Parse_Active_Devices')",
                  "actions": {
                    "Check_If_Already_Tagged": {
                      "type": "If",
                      "expression": {
                        "and": [
                          {
                            "not": {
                              "contains": [
                                "@body('Build_Tagged_Device_IDs')",
                                "@items('Tag_Active_Untagged_Devices')?['DeviceId']"
                              ]
                            }
                          }
                        ]
                      },
                      "actions": {
                        "Add_Tag": {
                          "type": "Http",
                          "inputs": {
                            "uri": "https://api.security.microsoft.com/api/machines/@{items('Tag_Active_Untagged_Devices')?['DeviceId']}/tags",
                            "method": "POST",
                            "headers": {
                              "Content-Type": "application/json"
                            },
                            "body": {
                              "Value": "@{parameters('TagName')}",
                              "Action": "Add"
                            },
                            "authentication": {
                              "type": "ActiveDirectoryOAuth",
                              "authority": "",
                              "tenant": "@{parameters('TenantID')}",
                              "audience": "https://api.security.microsoft.com",
                              "clientId": "@{parameters('ClientID')}",
                              "secret": "@{parameters('Secret')}"
                            }
                          }
                        }
                      },
                      "else": {
                        "actions": {}
                      }
                    }
                  },
                  "runAfter": {},
                  "runtimeConfiguration": {
                    "concurrency": {
                      "repetitions": 5
                    }
                  }
                },
                "Untag_Inactive_Devices": {
                  "type": "Foreach",
                  "foreach": "@body('Parse_Tagged_Devices')",
                  "actions": {
                    "Check_If_Still_Active": {
                      "type": "If",
                      "expression": {
                        "and": [
                          {
                            "not": {
                              "contains": [
                                "@body('Build_Active_Device_IDs')",
                                "@items('Untag_Inactive_Devices')?['DeviceId']"
                              ]
                            }
                          }
                        ]
                      },
                      "actions": {
                        "Remove_Tag": {
                          "type": "Http",
                          "inputs": {
                            "uri": "https://api.security.microsoft.com/api/machines/@{items('Untag_Inactive_Devices')?['DeviceId']}/tags",
                            "method": "POST",
                            "headers": {
                              "Content-Type": "application/json"
                            },
                            "body": {
                              "Value": "@{parameters('TagName')}",
                              "Action": "Remove"
                            },
                            "authentication": {
                              "type": "ActiveDirectoryOAuth",
                              "authority": "",
                              "tenant": "@{parameters('TenantID')}",
                              "audience": "https://api.security.microsoft.com",
                              "clientId": "@{parameters('ClientID')}",
                              "secret": "@{parameters('Secret')}"
                            }
                          }
                        }
                      },
                      "else": {
                        "actions": {}
                      }
                    }
                  },
                  "runAfter": {},
                  "runtimeConfiguration": {
                    "concurrency": {
                      "repetitions": 5
                    }
                  }
                }
              },
              "else": {
                "actions": {}
              },
              "runAfter": {
                "Send_Report_Email": [ "Succeeded" ],
                "Build_Active_Device_IDs": [ "Succeeded" ],
                "Build_Tagged_Device_IDs": [ "Succeeded" ]
              }
            }
          }
        },
        "parameters": {
          "$connections": {
            "value": {
              "office365": {
                "connectionId": "[resourceId('Microsoft.Web/connections', variables('o365ConnectionName'))]",
                "connectionName": "[variables('o365ConnectionName')]",
                "id": "[subscriptionResourceId('Microsoft.Web/locations/managedApis', parameters('location'), 'office365')]"
              }
            }
          },
          "TenantID": {
            "value": "[parameters('tenantId')]"
          },
          "ClientID": {
            "value": "[parameters('clientId')]"
          },
          "Secret": {
            "value": "[parameters('clientSecret')]"
          },
          "ActiveThresholdDays": {
            "value": "[parameters('activeThresholdDays')]"
          },
          "TagName": {
            "value": "[variables('tagName')]"
          },
          "DryRun": {
            "value": "[parameters('dryRun')]"
          },
          "RecurrenceInterval": {
            "value": "[parameters('recurrenceInterval')]"
          },
          "RecurrenceFrequency": {
            "value": "[parameters('recurrenceFrequency')]"
          }
        }
      }
    }
  ],
  "outputs": {
    "logicAppName": {
      "type": "string",
      "value": "[parameters('logicAppName')]"
    },
    "postDeploymentNote": {
      "type": "string",
      "value": "IMPORTANT: After deployment, go to the API connection resource ‚Üí Edit API connection ‚Üí Authorize with your Office 365 account ‚Üí Save."
    }
  }
}